<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ms_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/mc_donal"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tx_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="McDonald's"
            android:layout_toRightOf="@+id/ms_image"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:fontFamily="@font/baloo"/>

        <RatingBar
            android:id="@+id/ms_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_below="@+id/tx_image"
            android:layout_toRightOf="@+id/ms_image"
            android:layout_marginLeft="10dp"
            android:rating="4"/>

        <TextView
            android:id="@+id/ms_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="It's delicious.... Great!!!"
            android:layout_below="@+id/ms_rating"
            android:layout_toRightOf="@id/ms_image"
            android:layout_marginLeft="10dp"
            android:padding="10dp"/>




    </RelativeLayout>

</androidx.cardview.widget.CardView>